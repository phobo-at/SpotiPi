#!/bin/bash
# ðŸŽµ SpotiPi Quick Server Manager
# Simple wrapper for common server operations

PROJECT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
MANAGER="$PROJECT_DIR/scripts/server_manager.py"
LOCAL_MANAGER="$PROJECT_DIR/scripts/local_server.sh"

if [ -x "$PROJECT_DIR/.venv/bin/python" ]; then
    PYTHON_BIN="$PROJECT_DIR/.venv/bin/python"
else
    PYTHON_BIN="python3"
fi

# Colors for output
GREEN='\033[0;32m'
RED='\033[0;31m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

case "$1" in
    "start"|"s")
        echo -e "${BLUE}ðŸš€ Starting SpotiPi server...${NC}"
        "$PYTHON_BIN" "$MANAGER" start
        ;;
    "stop"|"k")
        echo -e "${RED}ðŸ›‘ Stopping SpotiPi server...${NC}"
        "$PYTHON_BIN" "$MANAGER" stop
        ;;
    "restart"|"r")
        echo -e "${YELLOW}ðŸ”„ Restarting SpotiPi server...${NC}"
        "$PYTHON_BIN" "$MANAGER" restart
        ;;
    "status"|"st")
        "$PYTHON_BIN" "$MANAGER" status
        ;;
    "logs"|"l")
        if [ "$2" = "-f" ]; then
            echo -e "${BLUE}ðŸ“‹ Following logs (Ctrl+C to stop)...${NC}"
            "$PYTHON_BIN" "$MANAGER" logs -f
        else
            "$PYTHON_BIN" "$MANAGER" logs
        fi
        ;;
    "errors"|"e")
        echo -e "${RED}ðŸ”´ Error logs:${NC}"
        "$PYTHON_BIN" "$MANAGER" errors
        ;;
    "local"|"dev")
        shift
        LOCAL_CMD="${1:-status}"
        shift || true
        if [ -x "$LOCAL_MANAGER" ]; then
            "$LOCAL_MANAGER" "$LOCAL_CMD" "$@"
        else
            echo -e "${RED}âŒ Missing local manager script: $LOCAL_MANAGER${NC}"
            exit 1
        fi
        ;;
    "test"|"t")
        echo -e "${BLUE}ðŸ§ª Testing server...${NC}"
        if curl -s http://localhost:5001/ > /dev/null; then
            echo -e "${GREEN}âœ… Server is responding${NC}"
            echo -e "${BLUE}ðŸŽŸï¸ Checking token cache...${NC}"
            curl -s http://localhost:5001/api/token-cache/status | "$PYTHON_BIN" -c "
import sys, json
try:
    data = json.load(sys.stdin)
    metrics = data['cache_info']['cache_metrics']
    print(f'   Cache hits: {metrics[\"cache_hits\"]}/{metrics[\"total_requests\"]}')
except:
    print('   Cache status unavailable')
"
        else
            echo -e "${RED}âŒ Server not responding${NC}"
        fi
        ;;
    "open"|"o")
        echo -e "${BLUE}ðŸŒ Opening SpotiPi in browser...${NC}"
        if command -v open > /dev/null; then
            open http://localhost:5001
        elif command -v xdg-open > /dev/null; then
            xdg-open http://localhost:5001
        else
            echo "Please open http://localhost:5001 in your browser"
        fi
        ;;
    *)
        echo -e "${BLUE}ðŸŽµ SpotiPi Quick Commands${NC}"
        echo ""
        echo "Usage: $0 <command>"
        echo ""
        echo "Commands:"
        echo -e "  ${GREEN}start${NC}, ${GREEN}s${NC}       Start server"
        echo -e "  ${RED}stop${NC}, ${RED}k${NC}        Stop server"  
        echo -e "  ${YELLOW}restart${NC}, ${YELLOW}r${NC}     Restart server"
        echo -e "  ${BLUE}status${NC}, ${BLUE}st${NC}     Show status"
        echo -e "  ${BLUE}logs${NC}, ${BLUE}l${NC}       Show logs"
        echo -e "  ${BLUE}logs -f${NC}       Follow logs"
        echo -e "  ${RED}errors${NC}, ${RED}e${NC}      Show errors"
        echo -e "  ${GREEN}test${NC}, ${GREEN}t${NC}       Test server"
        echo -e "  ${BLUE}open${NC}, ${BLUE}o${NC}       Open in browser"
        echo -e "  ${GREEN}local${NC} <cmd>    Local test profile (safe defaults)"
        echo ""
        echo "Examples:"
        echo "  $0 start     # Start server in background"
        echo "  $0 local start  # Start local test server (127.0.0.1:5001)"
        echo "  $0 test      # Quick health check"
        echo "  $0 logs -f   # Follow logs in real-time"
        ;;
esac
